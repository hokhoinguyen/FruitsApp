<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserAdActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_bg_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtRegis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:fontFamily="cursive"
            android:text="Users"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/framelayout1"
            app:layout_constraintEnd_toEndOf="@+id/framelayout1"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="@+id/framelayout1"
            app:layout_constraintTop_toTopOf="@+id/framelayout1" />
    </FrameLayout>


    <EditText
        android:id="@+id/edtUserNameAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="User name">
    </EditText>

    <EditText
        android:id="@+id/edtFirstNameAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Tên">
    </EditText>

    <EditText
        android:id="@+id/edtLastNameAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Họ">
    </EditText>

    <EditText
        android:id="@+id/edtPasswordAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Password"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:id="@+id/edtAddressAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Địa chỉ">
    </EditText>

    <EditText
        android:id="@+id/edtPhoneNumberAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Số điện thoại"
        android:inputType="number">
    </EditText>

    <EditText
        android:id="@+id/edtRoleAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Role">
    </EditText>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/btnInsert"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="146dp"
                android:layout_height="60dp"
                android:text="Insert"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp">
            </Button>

            <Button
                android:id="@+id/btnUpdate"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="146dp"
                android:layout_height="60dp"
                android:text="Update"
                android:textSize="20dp">
            </Button>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/btnDelete"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="146dp"
                android:layout_height="60dp"
                android:text="Delete"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp">
            </Button>

            <Button
                android:id="@+id/btnView"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="146dp"
                android:layout_height="60dp"
                android:text="View"
                android:textSize="20dp">
            </Button>
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lstData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                </ListView>
            </ScrollView>

    </LinearLayout>

</LinearLayout>