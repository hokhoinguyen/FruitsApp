<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/framelayout1"
                android:layout_width="match_parent"
                android:layout_height="122dp"

                android:background="@drawable/main_bg_top">
                <TextView
                    android:id="@+id/txtHello"
                    android:layout_width="251dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="cursive"
                    android:text="Xin chÃ o!"
                    android:textColor="@color/white"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/framelayout1"
                    app:layout_constraintEnd_toEndOf="@+id/framelayout1"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="@+id/framelayout1"
                    app:layout_constraintTop_toTopOf="@+id/framelayout1" />
            </FrameLayout>

        </LinearLayout>

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Food"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/CN1_KH_Pic"
                        android:layout_width="93dp"
                        android:layout_height="62dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/img_5" />

                    <Button
                        android:id="@+id/btnFood"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Detail"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="130dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/shoppingCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Shopping Cart"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/CN2_KH_Pic"
                        android:layout_width="93dp"
                        android:layout_height="62dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/img_2" />
                    <Button
                        android:id="@+id/btnShoppingCart"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Detail"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="130dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>